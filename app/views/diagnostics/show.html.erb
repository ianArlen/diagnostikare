<p style="color: green"><%= notice %></p>

<%= render @diagnostic %>

<div>
  <div class="d-flex justify-content-center">
    <%= link_to "Edit this diagnostic", edit_diagnostic_path(@diagnostic), class:"card-link" %> |
    <%= link_to "Back to diagnostics", diagnostics_path, class:"card-link" %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= button_to "Destroy this diagnostic", @diagnostic, method: :delete, class:"btn btn-secondary" %>
  </div>
</div>
